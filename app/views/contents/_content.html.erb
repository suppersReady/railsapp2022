
<div class="row">
    <div class="col s3">
      <div class="card">
        <div class="card-image">
          <img src="images/sample-1.jpg">
        </div>
        <div class="card-title">
          <p><%= content.titolo %></p>
        </div>
        <div class="card-content">
          <p><%= content.descrizione %></p>
        </div>
        <div class="card-content">
        <span><%= content.utente_id %></span><span class="right"> <%= number_to_currency(content.price) %></span>
        </div>
        <div class="card-action">
          <%= link_to "Mostra", content, class:"btn" %>
        </div>
      </div>
    </div>
  </div>
